{
  "plugin_info": {
    "id": "factorweave_data_source",
    "name": "FactorWeave数据源插件",
    "version": "1.0.0",
    "description": "基于FactorWeave框架的高性能量化数据源，支持股票、指数、基金等多资产类型数据获取",
    "author": "FactorWeave-Quant Team",
    "homepage": "https://github.com/factorweave/factorweave-quant",
    "repository": "https://github.com/factorweave/factorweave-quant",
    "license": "MIT",
    "keywords": ["factorweave", "quantitative", "data-source", "stock", "trading"],
    "category": "data_source",
    "type": "data_source"
  },
  "capabilities": {
    "supported_asset_types": [
      "stock",
      "index", 
      "fund"
    ],
    "supported_data_types": [
      "historical_kline",
      "real_time_quote",
      "fundamental"
    ],
    "supported_markets": [
      "SH",
      "SZ", 
      "BJ"
    ],
    "supported_frequencies": [
      "1m",
      "5m",
      "15m", 
      "30m",
      "60m",
      "D",
      "W",
      "M"
    ],
    "features": {
      "real_time_support": true,
      "historical_data": true,
      "fundamental_data": true,
      "technical_indicators": false,
      "news_data": false,
      "options_data": false,
      "futures_data": false,
      "crypto_data": false,
      "forex_data": false
    },
    "limits": {
      "max_history_years": 20,
      "max_symbols_per_request": 100,
      "rate_limit_per_minute": 1000,
      "concurrent_requests": 10
    }
  },
  "requirements": {
    "python_version": ">=3.8",
    "dependencies": [
      "hikyuu>=2.6.0",
      "pandas>=1.3.0",
      "numpy>=1.20.0"
    ],
    "system_requirements": {
      "memory_mb": 512,
      "disk_space_mb": 1024,
      "cpu_cores": 1
    }
  },
  "configuration": {
    "schema": {
      "type": "object",
      "properties": {
        "data_dir": {
          "type": "string",
          "default": "data",
          "description": "FactorWeave数据目录路径"
        },
        "preload_day_count": {
          "type": "integer",
          "default": 100000,
          "minimum": 1000,
          "maximum": 500000,
          "description": "预加载K线数据天数"
        },
        "enable_spot_agent": {
          "type": "boolean",
          "default": true,
          "description": "是否启用实时行情代理"
        },
        "log_level": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARNING", "ERROR"],
          "default": "INFO",
          "description": "日志级别"
        },
        "timeout_seconds": {
          "type": "integer",
          "default": 30,
          "minimum": 5,
          "maximum": 300,
          "description": "请求超时时间（秒）"
        },
        "cache_enabled": {
          "type": "boolean",
          "default": true,
          "description": "是否启用缓存"
        },
        "cache_ttl_minutes": {
          "type": "integer",
          "default": 5,
          "minimum": 1,
          "maximum": 60,
          "description": "缓存生存时间（分钟）"
        }
      },
      "required": ["data_dir"]
    },
    "ui_schema": {
      "data_dir": {
        "ui:widget": "file",
        "ui:options": {
          "directory": true
        }
      },
      "preload_day_count": {
        "ui:widget": "range"
      },
      "log_level": {
        "ui:widget": "select"
      },
      "timeout_seconds": {
        "ui:widget": "range"
      },
      "cache_ttl_minutes": {
        "ui:widget": "range"
      }
    }
  },
  "installation": {
    "install_command": "pip install hikyuu",
    "verify_command": "python -c \"import hikyuu; print('FactorWeave数据源安装成功')\"",
    "setup_instructions": [
      "1. 安装FactorWeave-Quant: pip install hikyuu",
      "2. 配置数据目录",
      "3. 启用插件"
    ]
  },
  "documentation": {
    "readme_url": "https://factorweave.readthedocs.io/",
    "api_docs_url": "https://factorweave.readthedocs.io/en/latest/api.html",
    "tutorials": [
      {
        "title": "快速开始",
        "url": "https://factorweave.readthedocs.io/quickstart/"
      },
      {
        "title": "数据源配置",
        "url": "https://factorweave.readthedocs.io/datasource/"
      }
    ],
    "examples": [
      {
        "title": "基础数据获取",
        "file": "examples/basic_data.py"
      },
      {
        "title": "实时行情订阅",
        "file": "examples/realtime_quotes.py"
      }
    ]
  },
  "support": {
    "issues_url": "https://github.com/factorweave/factorweave-quant/issues",
    "documentation_url": "https://factorweave.readthedocs.io/",
    "community_url": "https://github.com/factorweave/factorweave-quant/discussions",
    "email": "support@factorweave.org"
  }
} 